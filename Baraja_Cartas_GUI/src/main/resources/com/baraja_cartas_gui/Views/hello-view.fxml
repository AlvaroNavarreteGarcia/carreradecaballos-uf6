<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.TextField?>
<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.baraja_cartas_gui.Controller.HelloController"
           stylesheets="@../Css/styles.css" styleClass="stack-pane-background">


    <!-- Contenedor principal StackPane que centra el VBox en toda la escena -->
    <VBox alignment="CENTER" spacing="20.0">
        <!-- Contenedor VBox principal con alineación centrada y espacio entre elementos -->
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            <!-- Márgenes internos del VBox -->
        </padding>

        <!-- Cuadro de texto para el nombre del jugador -->
        <TextField fx:id="nombreJugadorTextField" promptText="Introduce tu nombre">
        </TextField>

        <!-- Botón para empezar partida -->
        <Button text="Empezar Partida" onAction="#empezarPartidaBotonClick">
            <styleClass>custom-button</styleClass>
        </Button>

        <!-- Botón para ver estadísticas -->
        <Button text="Ver Estadísticas" onAction="#empezarPartidaBotonClick">
            <styleClass>custom-button</styleClass>
        </Button>

        <!-- Botón para salir del juego -->
        <Button text="Salir" onAction="#salirBotonClick">
            <styleClass>custom-button</styleClass>
        </Button>
    </VBox>
</StackPane>
